{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    
    /* --- ATIVAÇÃO DO MODO ESTRITO --- */
    "strict": true,                 // Ativa noImplicitAny, strictNullChecks, etc.
    "noImplicitAny": true,          // Proíbe variáveis sem tipo (any)
    "strictNullChecks": true,       // O mais importante: obriga a tratar null/undefined
    "forceConsistentCasingInFileNames": true,
    
    /* Outras configurações */
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@goldenbear/ui/*": ["packages/ui/src/*"],
      "@goldenbear/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}