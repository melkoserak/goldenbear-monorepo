{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // Permite que `@/` funcione dentro de cada app
      "@/*": ["./src/*"],
      // Permite que vocÃª importe do seu pacote de UI
      "@goldenbear/ui": ["../../packages/ui/src/components"],
      "@goldenbear/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules"]
}