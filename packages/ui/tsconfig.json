{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* --- CORREÇÕES CRÍTICAS --- */
    "jsx": "react-jsx", // Diz ao TS para aceitar JSX (corrige o erro 'Cannot use JSX')
    "baseUrl": "./", // Define a base para os caminhos
    "paths": {
      "@/*": ["./src/*"] // Corrige o erro "Cannot find module '@/lib/utils'"
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}